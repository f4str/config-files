" syntax coloring
syntax enable

" show line number
set number
highlight LineNr term=bold ctermfg=DarkGrey

" show current position
set ruler

" Show matching brackets
set showmatch

" filetype plugins
filetype plugin on
filetype indent on

" tabs and indents
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent
set copyindent
set preserveindent

" Wild menu
set wildmenu
set wildignore=*.o,*~,*.pyc

" Searching
set hlsearch
set incsearch

